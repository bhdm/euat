<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">
    <url>
        <loc>http://euat.ru</loc>
        <lastmod>2016-10-20T00:00:00+01:00</lastmod>
        <priority>1.0</priority>
        <changefreq>daily</changefreq>
    </url>
    {% for p in pages  %}
        <url>
            <loc>http://euat.ru{{ p.url }}</loc>
            <lastmod>2016-10-20T00:00:00+01:00</lastmod>
            <priority>1.0</priority>
            <changefreq>daily</changefreq>
        </url>
    {% endfor %}
    {% for publication in publications  %}
        {% if publication.category.id == 1 %}
            {% set type = 'education/video' %}
        {% elseif publication.category.id == 2 %}
            {% set type = 'publications' %}
        {% else %}
            {% set type = 'publications' %}
        {% endif %}
        <url>
            <loc>http://euat.ru/{{ type }}/{{ publication.slug ? publication.slug : publication.id }}</loc>
            <lastmod>{{ publication.created | date('Y-m-d') }}T12:24:14+01:00</lastmod>
            <priority>0.85</priority>
            <changefreq>daily</changefreq>
        </url>
    {% endfor %}
    {% for event in events  %}
        {% if publication.type == 'CONGRESS' %}
            {% set type = 'events/conference-convention' %}
        {% elseif publication.type  == 'SCHOOL' %}
            {% set type = 'events/school' %}
        {% else %}
            {% set type = 'events/partner' %}
        {% endif %}
        <url>
            <loc>http://euat.ru/{{ type }}/{{ event.slug ? event.slug : event.id }}</loc>
            <lastmod>{{ event.created | date('Y-m-d') }}T12:24:14+01:00</lastmod>
            <priority>0.85</priority>
            <changefreq>daily</changefreq>
        </url>
    {% endfor %}

    {% for j in journals  %}
        <url>
            <loc>http://euat.ru/magazine/{{ j.slug }}</loc>
            <lastmod>{{ j.created | date("Y-m-d") }}T00:00:00+01:00</lastmod>
            <priority>0.85</priority>
            <changefreq>daily</changefreq>
        </url>
    {% endfor %}

    {% for j in journalPosts  %}
        <url>
            <loc>http://euat.ru/magazine/{{ j.journal.slug }}/{{ j.slug }}</loc>
            <lastmod>{{ j.created | date("Y-m-d") }}T00:00:00+01:00</lastmod>
            <priority>0.85</priority>
            <changefreq>daily</changefreq>
        </url>
    {% endfor %}
</urlset>