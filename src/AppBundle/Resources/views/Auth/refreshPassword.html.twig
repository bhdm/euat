{% extends 'AppBundle::layout.html.twig' %}


{% block fullContent %}
    {% if p1 is defined %}
        1 - {{ p1 }} 2 - {{ p2 }}
    {% endif %}
    <form method="post" action="{{ path('refresh_password') }}">
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="edit-title text-uppercase">Изменение пароля</div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Новый пароль</label>
                    <div class="col-sm-8"><input type="password" name="password_new" class="form-control"></div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                    <label class="col-sm-4 control-label">Подтвердите пароль</label>
                    <div class="col-sm-8"><input type="password" name="password_new2" class="form-control"></div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="col-sm-9 col-sm-offset-3 registration-submit-button text-right">
                    <button type="submit" class="btn btn-primary">Обновить пароль</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}