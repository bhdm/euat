{% extends 'AppBundle::layout.html.twig' %}
{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('assets/vendor/moment/moment.js') }}"></script>
    <script src="{{ asset('assets/vendor/moment/locale/ru.js') }}"></script>
    <script src="{{ asset('assets/vendor/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js') }}"></script>
{% endblock %}
{% block content %}
        <div class="col-xs-4">
            {{ render(controller("AppBundle:Widget:calendar" )) }}
        </div>
        <div class="col-xs-8">
            {% if videos | length > 0 %}
                <div class="title">ВИДЕО</div>
                {% for v in videos %}
                    <div class="new-item">
                        <a href="{{ path('publications', {'url' : v.id }) }}"><div class="new-item-title">{{ v.title }}</div></a>
                        <div class="new-item-anons">
                            {{ v.body | anons | raw }}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
            {% if educations | length > 0 %}
                <br />
                <div class="title">ОБРАЗОВАНИЕ</div>
                {% for e in educations %}
                    <div class="new-item">
                        <a href="{{ path('publications', {'url' : e.id }) }}"><div class="new-item-title">{{ e.title }}</div></a>
                        <div class="new-item-anons">
                            {{ e.body | anons | raw }}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    <div class="row">
        <div class="col-xs-9">
            <div class="title">НОВОСТИ</div>
            {% for p in publications %}
                <div class="new-item">
                    <a href="{{ path('publications', {'url' : p.id }) }}"><div class="new-item-title">{{ p.title }}</div></a>
                    <div class="new-item-anons">
                        {{ p.body | anons | raw }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}