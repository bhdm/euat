{% extends "AdminBundle::layout.html.twig" %}

{% block breadcrumb %}
    <ul class="breadcrumb well">
        <li><a href="{{ path('admin_main') }}">Домой</a> <span class="divider"></span></li>
        <li><a href="{{ path('admin_journal_list') }}">журналы</a> <span class="divider"></span></li>
        <li class="active"><a href="{{ path('admin_journal_edit',{'id' : journal.id }) }}">{{ journal.title }}</a> <span class="divider"></span></li>
        <li class="active">Добавление<span class="divider"></span></li>
    </ul>
{% endblock %}

{% block content %}
    <div class="well">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $("#journal_post_title").syncTranslit({
                destination: "journal_post_slug",
                caseStyle: "lower",
                urlSeparator: "_"
            });
        });
    </script>
{% endblock %}