{% extends "AdminBundle::layout.html.twig" %}

{% block breadcrumb %}
    <ul class="breadcrumb well">
        <li><a href="{{ path('admin_main') }}">Домой</a> <span class="divider"></span></li>
        <li><a href="{{ path('admin_recommendation_list') }}">Национальный рекомендации</a> <span class="divider"></span></li>
        <li class="active">Добавление<span class="divider"></span></li>
    </ul>
{% endblock %}

{% block content %}
    <div class="well">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $("#recommendation_title").syncTranslit({
                destination: "recommendation_slug",
                caseStyle: "lower",
                urlSeparator: "_"
            });

        });
    </script>
{% endblock %}
